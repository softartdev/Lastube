<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView android:id="@+id/infoImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_info_black_24dp"
                android:contentDescription="@string/app_name" />

            <TextView android:id="@+id/infoTextTrack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:padding="@dimen/abc_text_size_title_material"
                android:textSize="@dimen/abc_text_size_title_material" />

            <TextView android:id="@+id/infoTextAlbum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textStyle="italic"
                android:typeface="monospace"
                android:gravity="right"
                android:padding="@dimen/abc_text_size_subhead_material"
                android:textSize="@dimen/abc_text_size_subhead_material" />

            <TextView android:id="@+id/infoTextWiki"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:typeface="sans"
                android:padding="@dimen/abc_text_size_caption_material"
                android:textSize="@dimen/abc_text_size_body_1_material" />

        </LinearLayout>
</ScrollView>